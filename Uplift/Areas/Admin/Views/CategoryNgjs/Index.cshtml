<!Doctype html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/js/AngularJs/angular.js"></script>
    <script src="~/js/AngularJs/angular-route.js"></script>
    <script src="~/js/AngularJs/module.js"></script>
    <script src="~/js/AngularJs/service.js"></script>
    <script src="~/js/AngularJs/controller.js"></script>
</head>
<body ng-app="myApp" ng-controller="myController">
    <div class="container">
        <hr />
        <div class="alert alert-info alert-dismissible" role="alert" ng-if="message">
            {{message}}
            <button type="button" class="close" aria-label="close">
                <span aria-hidden="true" ng-click="clearInfo()">&times;</span>
            </button>
        </div>


        <h4>
            Category List<button type="button" style="width:auto" class="btn btn-sm btn-info float-right" data-toggle="modal" data-target="#AddModal">+ Add New Category</button>
        </h4>

        <table class="table table-bordered table-striped  table-sm">
            <thead>
                <tr class="bg-secondary text-light">
                    <td>Sl No</td>
                    <td>Category Name</td>
                    <td>Display Order</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="category in Categories">
                    <td>{{$index+1}}</td>
                    <td>{{category.Name}}</td>
                    <td>{{category.DisplayOrder}}</td>
                    <td>
                        <button type="button" data-toggle="modal" data-target="#editModal" ng-click="selectedCategory(category)" class="btn btn-sm btn-info">Edit</button>
                        <button type="button" data-toggle="modal" data-target="#deleteModal" ng-click="selectedCategory(category)" class="btn btn-sm btn-danger">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>


        <div class="modal fade" id="AddModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add New Category</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        <form ng-submit="submit()">

                            <div class="form-group">
                                <label for="Name" class="col-form-label">Category Name:</label>
                                <input type="text" class="form-control form-control-sm" ng-model="newCategory.Name" id="username" placeholder="Category Name..." required>
                            </div>

                            <div class="form-group">
                                <label for="DisplayOrder" class="col-form-label">DisplayOrder:</label>
                                <input type="text" class="form-control form-control-sm" ng-model="newCategory.DisplayOrder" placeholder="Product Price..." id="DisplayOrder" required>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                <button type="submit" id="submit" class="btn btn-info" data-dismiss="modal" ng-click="addCategory()">Save Category</button>
                            </div>

                        </form>
                    </div>


                </div>
            </div>
        </div>


        <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Edit Category</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">

                        <form>
                            <input type="hidden" ng-click="clickedCategory.Id" />
                            <div class="form-group">
                                <label for="Name" class="col-form-label">Category Name:</label>
                                <input type="text" class="form-control form-control-sm" ng-model="clickedCategory.Name" id="Name" placeholder="Category Name...">
                            </div>

                            <div class="form-group">
                                <label for="DisplayOrder" class="col-form-label">Display Order:</label>
                                <input type="text" class="form-control form-control-sm" ng-model="clickedCategory.DisplayOrder" placeholder="Category Price..." id="DisplayOrder">
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-info" data-dismiss="modal" ng-click="updateCategory()">Update Category</button>
                            </div>

                        </form>

                    </div>



                </div>
            </div>
        </div>

        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete Category</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        <p>Are you sure ?? delete the Category : <b class="text-primary"><u>{{clickedCategory.Name}}</u></b></p>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                        <button type="submit" class="btn btn-info" data-dismiss="modal" ng-click="deleteCategory()">Yes</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>

